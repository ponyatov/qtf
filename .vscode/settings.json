{
    "multiCommand.commands": [
        { "command": "multiCommand.f11",
            "sequence": [ "workbench.action.files.saveAll",
                { "command": "workbench.action.terminal.sendSequence",
                    "args": {"text": "\u000D clear ; LANG=C make format doxy \u000D"}}]},
        { "command": "multiCommand.f12",
            "sequence": [ "workbench.action.files.saveAll",
                { "command": "workbench.action.terminal.sendSequence",
                    "args": {"text": "\u000D clear ; LANG=C make all \u000D"}}]}
    ],

    // files
    "files.exclude": {
        "docs/**": true,
		".vscode/*.log": true
	},
    "files.watcherExclude": {
        "docs/**": true,
        "ref/**": true,
    },
    "files.associations": {
        ".fantomasignore": "ignore",
        "cctype": "cpp",
        "clocale": "cpp",
        "cmath": "cpp",
        "cstdarg": "cpp",
        "cstddef": "cpp",
        "cstdio": "cpp",
        "cstdlib": "cpp",
        "ctime": "cpp",
        "cwchar": "cpp",
        "cwctype": "cpp",
        "array": "cpp",
        "atomic": "cpp",
        "bit": "cpp",
        "*.tcc": "cpp",
        "chrono": "cpp",
        "compare": "cpp",
        "concepts": "cpp",
        "condition_variable": "cpp",
        "cstdint": "cpp",
        "deque": "cpp",
        "list": "cpp",
        "map": "cpp",
        "string": "cpp",
        "unordered_map": "cpp",
        "vector": "cpp",
        "exception": "cpp",
        "algorithm": "cpp",
        "functional": "cpp",
        "iterator": "cpp",
        "memory": "cpp",
        "memory_resource": "cpp",
        "numeric": "cpp",
        "random": "cpp",
        "ratio": "cpp",
        "string_view": "cpp",
        "system_error": "cpp",
        "tuple": "cpp",
        "type_traits": "cpp",
        "utility": "cpp",
        "initializer_list": "cpp",
        "iosfwd": "cpp",
        "iostream": "cpp",
        "istream": "cpp",
        "limits": "cpp",
        "mutex": "cpp",
        "new": "cpp",
        "numbers": "cpp",
        "ostream": "cpp",
        "semaphore": "cpp",
        "sstream": "cpp",
        "stdexcept": "cpp",
        "stop_token": "cpp",
        "streambuf": "cpp",
        "thread": "cpp",
        "cinttypes": "cpp",
        "typeinfo": "cpp",
        "variant": "cpp",
        "qpushbutton": "cpp",
        "qmainwindow": "cpp"
    },

    // editor
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.rulers": [80],
    "workbench.tree.indent": 24,
    "explorer.autoReveal": false,
    "files.insertFinalNewline": true,
    "git.enabled": false,

    // C++
    "[c,cpp]": {
        "editor.defaultFormatter": "xaver.clang-format",
        "editor.formatOnSave":     true
    },
    "C_Cpp.intelliSenseEngine":    "Tag Parser",

    // cmake
    "cmake.configureSettings": {"APP": "${workspaceFolderBasename}"},
    "cmake.sourceDirectory"  : "${workspaceFolder}",
    "cmake.buildDirectory"   : "${workspaceFolder}/tmp/build",
	"cmake.generator"        : "Unix Makefiles",
    "cmake.configureOnOpen"  : false,
    "cmake.debugConfig"      : {
        "cwd": "${workspaceFolder}",
        "args": [
            "${workspaceFolder}/lib/${workspaceFolderBasename}.ini"
        ]},
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",

    // clang-format
    "clang-format.executable":    "clang-format",
    "clang-format.fallbackStyle": "Google",
    "clang-format.style":         "file",
}
